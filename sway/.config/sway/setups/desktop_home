# Map monitor descriptions to Sway output names
set $middle DP-2
set $left HDMI-A-1

# Output configuration
output $middle position 1080 435
output $left transform 270 position 0 0

# Workspaces (1â€“10)
workspace 1 output $middle
workspace 2 output $middle
workspace 3 output $middle
workspace 4 output $middle

workspace 5 output $left
workspace 6 output $left
workspace 7 output $left
workspace 8 output $left

workspace 9 output $middle
workspace 10 output $middle
